const IMDbScraper = () => {
  const [url, setUrl] = useState('');

  const handleSubmit = () => {
    // Call your Python script here with the url
    // Display the result in the "result" div
  };

  return (
    <div style={{ display: 'flex', justifyContent: 'center', alignItems: 'center', height: '100vh' }}>
